<canvas id='background'></canvas>

<!-- 外部のbubbly-bgスクリプトを読み込み -->
<script is:inline src='/my_profile/js/bubbly-bg.js'></script>

<!-- メインのスクリプト -->
<script>
	document.addEventListener('DOMContentLoaded', () => {
		// @ts-ignore
		bubbly({
			bubbles: {
				fill: () => `hsla(${Math.random() * 10}, 30%, 30%, .2)`,
				shadow: () => ({ blur: 10, color: '#f5f5f5' }),
				stroke: () => null, // ({width: 2, color: "#fff"})
			},
			background: (ctx) => {
				const gradient = ctx.createLinearGradient(0, 0, ctx.canvas.width, ctx.canvas.height);
				gradient.addColorStop(0, '#f5f5f5');
				gradient.addColorStop(1, '#f3f3f3');
				return gradient;
			},
		});
	});
</script>

<style>
	canvas {
		position: fixed;
		z-index: -1;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}
</style>
