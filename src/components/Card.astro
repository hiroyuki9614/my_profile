<div class='card-wrapper'>
	<div class='card'></div>
	<slot />
</div>
<style>
	.card-wrapper {
		display: flex;
	}

	.card {
		height: 12rem;
		width: 30%;
		box-shadow: 2px 2px 2px 1px #7e7e7e;
		background-color: #f5f5f5f5;
		border-radius: 1rem;
	}

	.card-wrapper:nth-child(even) {
		flex-direction: row-reverse;
	}

	.card:first-child {
		margin-bottom: 1rem;
	}
	.card:last-child {
		margin: 1rem 0;
	}
</style>
